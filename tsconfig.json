{
  "compilerOptions": {
    /* Строгость и качество кода */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true,

    /* Современные настройки модулей (ключевое отличие) */
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",

    /* Структура проекта и вывод */
    "rootDir": "./src",
    "outDir": "./dist",
    "newLine": "lf",

    /* Вспомогательные опции */
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}